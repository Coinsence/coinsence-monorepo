{
  "name": "coinsence-monorepo",
  "private": true,
  "devDependencies": {
    "@aragon/cli": "^5.4.0",
    "coveralls": "^3.0.3",
    "lerna": "^3.13.1",
    "promptly": "^3.0.3"
  },
  "scripts": {
    "bootstrap": "lerna bootstrap --nohoist=@aragon/os",
    "postinstall": "npm run bootstrap",
    "devchain": "aragon devchain",
    "devchain:reset": "aragon devchain --reset",
    "publish:apps": "lerna run publish",
    "publish:http": "lerna run publish:http",
    "deploy:apps": "./scripts/deploy-apps.sh",
    "deploy:kit": "cd apps/coinsence-kit && npm run compile-contracts && aragon contracts exec scripts/deploy-kit.js",
    "deploy:dao": "cd apps/coinsence-kit && aragon contracts exec scripts/new-dao.js",
    "restart": "RESTART_KIT=true apps/shared/test-helpers/ganache-cli.sh",
    "start": "START_KIT=true apps/shared/test-helpers/ganache-cli.sh",
    "start:kit": "lerna run --scope=@coinsence/coinsence-kit --stream start",
    "test": "lerna run test --no-bail",
    "test:space": "lerna run --scope=@coinsence/apps-space --stream test",
    "test:coin": "lerna run --scope=@coinsence/apps-coin --stream test",
    "test:kit": "lerna run --scope=@coinsence/coinsence-kit --stream test",
    "coverage": "npm run coverage:all",
    "coverage:all": "lerna run --scope=@coinsence/apps-* --concurrency=1 --stream coverage",
    "coverage:space": "lerna run --scope=@coinsence/apps-space --concurrency=1 --stream coverage",
    "coverage:coin": "lerna run --scope=@coinsence/apps-coin --concurrency=1 --stream coverage",
    "coverage:member": "lerna run --scope=@coinsence/apps-member --concurrency=1 --stream coverage",
    "coverage:kit": "lerna run --scope=@coinsence/coinsence-kit --concurrency=1 --stream coverage",
    "lint": "lerna run --scope=@coinsence/apps-* --stream lint",
    "lint:fix": "lerna run --scope=@coinsence/apps-* --stream fix",
    "lint:space": "lerna run --scope=@coinsence/apps-space --concurrency=1 --stream lint",
    "lint:coin": "lerna run --scope=@coinsence/apps-coin --concurrency=1 --stream lint",
    "lint:kit": "lerna run --scope=@coinsence/coinsence-kit --stream lint",
    "lint:member": "lerna run --scope=@coinsence/apps-member --concurrency=1 --stream lint",
    "build-json": "node ./scripts/build-json.js",
    "repl": "truffle exec scripts/repl.js",
    "seeds": "truffle exec scripts/seeds.js"
  },
  "dependencies": {
    "eth-provider": "^0.2.2",
    "ethers": "^4.0.27",
    "ipfs-http-client": "^30.1.1",
    "morgan": "^1.9.1",
    "rsvp": "^4.8.2"
  }
}
